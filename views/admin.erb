<body>
<div class="container">
    <div class="col-md-6 col-sm-6 col-xs-12">
    <h3 class="contact-title">Добавить продукт</h3>
        <form action="/admin"  method="post" class="form-customer form-login" enctype="multipart/form-data">
            <div class="form-group">
                <input name= "product[title]" type="text" class="form-control form-account" placeholder="Название товара">
            </div>
            <div class="form-group">
                <input name= "product[price]" type="text" class="form-control form-account" placeholder="Цена">
            </div>
            <div class="form-group">
                <input name= "product[size]" type="text" class="form-control form-account" placeholder="Размер">
            </div>
            <div class="form-group">
                <div class="product-size">
                    <div class="size-group">
                        <label>Тип:</label>
                        <select name= "product[a_type]" class="single-option-selector" data-option="option1" >
                            <option value="S">Слитные</option>
                            <option value="L">Раздельные</option>                                            
                        </select>
                    </div>
                </div>                  
            </div>            
            <div class="form-group">
                <textarea rows="7" name= "product[description]"  placeholder="Описание товара" class="form-control form-account"></textarea>
            </div>
            <label>Фото 600х600</label>
            <input type="file" name="files">
            <br>
            <label>Фото 740х918</label>
            <input type="file" name="files2">
            <br>
            <br>
            
            <div class="btn-button-group mg-top-30 mg-bottom-15">
                <button type="submit" class="zoa-btn btn-login hover-white">Сохранить товар</button>
            </div>            
        </form>
    </div>

</div>  



</body>
